

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model Product {
  id Int @id @default(autoincrement())
  name String
  price Int
  createdAt DateTime @default(now())
  category Category @relation(fields: [categoryId],references: [id])
  categoryId Int
}

model Category{
    id Int @id @default(autoincrement())
    name String
    products Product[]
}
